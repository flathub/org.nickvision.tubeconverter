{
    "app-id": "org.nickvision.tubeconverter",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.dotnet7"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/dotnet7/bin",
        "append-ld-library-path": "/usr/lib/sdk/dotnet7/lib",
        "env": {
            "PKG_CONFIG_PATH": "/app/lib/pkgconfig:/app/share/pkgconfig:/usr/lib/pkgconfig:/usr/share/pkgconfig:/usr/lib/sdk/dotnet7/lib/pkgconfig"
        }
    },
    "command": "/app/opt/org.nickvision.tubeconverter/NickvisionTubeConverter.GNOME",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--filesystem=xdg-videos",
        "--filesystem=xdg-music",
        "--filesystem=xdg-download"
    ],
    "cleanup": [
      "/include",
      "/lib/pkgconfig",
      "*.a"
    ],
    "modules": [
        {
            "name": "ffmpeg",
            "config-opts": [
                "--disable-debug",
                "--disable-doc",
                "--disable-static",
                "--enable-gpl",
                "--enable-shared",
                "--disable-ffplay",
                "--disable-devices",
                "--enable-gnutls",
                "--enable-libmp3lame",
                "--enable-libvorbis"
            ],
            "cleanup": [
                "/share/ffmpeg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ffmpeg.org/releases/ffmpeg-5.1.2.tar.xz",
                    "sha256": "619e706d662c8420859832ddc259cd4d4096a48a2ce1eefd052db9e440eef3dc",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://ffmpeg.org/releases/",
                        "pattern": ">(ffmpeg-([\\d.]+)\\.tar\\.xz)<"
                    }
                }
            ]
        },
        {
            "name": "yt-dlp",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app ."
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/yt-dlp/releases/download/2023.02.17/yt-dlp.tar.gz",
                    "sha256": "81f607b8754b1bc67e6592a4e316c015d720e7118757a5afd4ef2aaf37d2ef29",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/yt-dlp/yt-dlp/tags",
                        "version-query": "[.[].name] | sort[-1]",
                        "url-query": "\"https://github.com/yt-dlp/yt-dlp/releases/download/\" + $version + \"/yt-dlp.tar.gz\""
                    }
                }
            ]
        },
        {
            "name": "org.nickvision.tubeconverter",
            "buildsystem": "simple",
            "build-options": {
                "arch": {
                    "arm": {
                        "env": {
                            "RUNTIME": "linux-arm"
                        }
                    },
                    "aarch64": {
                        "env": {
                            "RUNTIME": "linux-arm64"
                        }
                    },
                    "x86_64": {
                        "env": {
                            "RUNTIME": "linux-x64"
                        }
                    }
                }
            },
            "build-commands": [
                "mkdir -p /app/opt/org.nickvision.tubeconverter",
                "dotnet publish -c Release NickvisionTubeConverter.GNOME/NickvisionTubeConverter.GNOME.csproj $([ -d \"./nuget-sources\" ] && echo \"--source ./nuget-sources\") $([ \"$RUNTIME\" ] && echo \"--runtime $RUNTIME\") --self-contained true -o /app/opt/org.nickvision.tubeconverter",
                "sh NickvisionTubeConverter.GNOME/install_extras.sh /app",
                "desktop-file-edit --set-key='Exec' --set-value='/app/opt/org.nickvision.tubeconverter/NickvisionTubeConverter.GNOME' /app/share/applications/org.nickvision.tubeconverter.desktop"
            ],
            "sources": [
                "sources.json",
                {
                    "type": "git",
                    "url": "https://github.com/nlogozzo/NickvisionTubeConverter.git",
                    "tag": "2023.3.0-beta1"
                }
            ]
        }
    ]
}
